<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_mailing_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_horizontal_margin"
    android:layout_marginRight="@dimen/card_horizontal_margin"
    android:layout_marginBottom="@dimen/card_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="20dp"
    android:layout_gravity="center_horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

<!--        <androidx.appcompat.widget.AppCompatImageView-->
<!--            android:id="@+id/location_bg"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:scaleType="centerCrop"-->
<!--            app:srcCompat="@drawable/menu_item_blue" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/card_horizontal_padding"
            android:paddingTop="@dimen/card_vertical_padding"
            android:paddingRight="@dimen/card_horizontal_padding"
            android:paddingBottom="@dimen/card_vertical_padding">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_mailing_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/menu_item_orange"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:textColor="@android:color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_name_mailing_group"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name_mailing_group"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="167dp"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"
                android:text="Контакты"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_date_mailing_group"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name_mailing_group"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="167dp"
                android:layout_marginTop="72dp"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"
                android:text="22.05.2022"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>
